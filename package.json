{
  "name": "my-awesome-app",
  "version": "1.0.0",
  "description": "Electron boilerplate to deploy to any platform",
  "scripts": {
    "postinstall": "install-app-deps",
    "start": "electron ./app",
    "clean": "rm -rf ./dist",
    "test1": "build",
    "test2": "build --platform win32 --arch x64",
    "test3": "build --platform win32 --arch ia32",
    "test4": "build --platform linux --arch x64",
    "pack": "npm run pack:linux32 && npm run pack:linux64 && npm run pack:osx && npm run pack:win32 && npm run pack:win64",
    "pack:linux32": "electron-packager ./app $npm_package_name --out=dist/ --platform=linux --arch=ia32 --version=0.36.9 --overwrite",
    "pack:linux64": "electron-packager ./app $npm_package_name --out=dist/ --platform=linux --arch=x64 --version=0.36.9 --overwrite",
    "pack:osx": "electron-packager ./app $npm_package_name --out=dist/ --platform=darwin --arch=x64 --version=0.36.9 --icon=assets/osx/icon.icns --overwrite",
    "pack:win32": "electron-packager ./app $npm_package_name --out=dist/ --platform=win32 --arch=ia32 --version=0.36.9 --icon=assets/win/icon.ico --overwrite",
    "pack:win64": "electron-packager ./app $npm_package_name --out=dist/ --platform=win32 --arch=x64 --version=0.36.9 --icon=assets/win/icon.ico --overwrite",
    "build": "npm run clean && npm run build:osx && npm run build:win32 && npm run build:win64",
    "build:osx": "npm run pack:osx && electron-builder dist/$npm_package_name-darwin-x64/$npm_package_name.app --platform=osx --out=dist/$npm_package_name-darwin-x64-setup --config=build-config.json",
    "build:win32": "npm run pack:win32 && gulp nsi-template && electron-builder dist/$npm_package_name-win32-ia32 --platform=win --out=dist/$npm_package_name-win32-ia32-setup  --config=build-config.json",
    "build:win64": "npm run pack:win64 && gulp nsi-template && electron-builder dist/$npm_package_name-win32-x64 --platform=win --out=dist/$npm_package_name-win32-x64-setup --config=build-config.json"
  },
  "build": {
    "app-bundle-id": "your.id",
    "app-category-type": "your.app.category.type",
    "iconUrl": "(windows only) A URL to an ICO file to use as the application icon, see details below",
    "osx" : {
      "title": "my-awesome-app",
      "background": "assets/osx/my-awesome-app.png",
      "icon": "assets/osx/my-awesome-app.icns",
      "icon-size": 80,
      "contents": [
        { "x": 438, "y": 344, "type": "link", "path": "/Applications" },
        { "x": 192, "y": 344, "type": "file" }
      ]
    },
    "win" : {
      "title" : "my-awesome-app",
      "icon" : "assets/win/icon.ico",
      "nsiTemplate" : "dist/nsi-template/win/installer.nsi.tpl"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/TristanPouliquen/electron-boilerplate.git"
  },
  "keywords": [
    "electron",
    "boilerplate",
    "cross-platform",
    "deploy"
  ],
  "author": "Theodo (http://www.theodo.fr)",
  "bugs": {
    "url": "https://github.com/TristanPouliquen/electron-boilerplate/issues"
  },
  "homepage": "https://github.com/TristanPouliquen/electron-boilerplate#readme",
  "dependencies": {
    "electron-builder": "^3.3.0",
    "electron-packager": "^5.1.1",
    "electron-prebuilt": "^0.36.9",
    "gulp": "^3.9.0",
    "gulp-replace": "^0.5.4"
  }
}
